.message{ "data-message-id": "#{message.id}" }
  .message__info
    %p.name
      = message.user.name
    %p.date
      = format_posted_time(message.created_at)
  .message__content
    - if message.content.present?
      %p.description
        = message.content
    = image_tag message.image.url, class: 'message__content__image' if message.image.present?
